<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    tools:context=".activities.editresume.editresumefragments.SkillsFragment"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:overScrollMode="ifContentScrolls">


        <LinearLayout
android:nestedScrollingEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/skills_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/skill_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/aero_matics_display_bold_italic"
                android:gravity="center"
                android:text="@string/skills"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/skills_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_group_18" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/skills_rv"
                  android:nestedScrollingEnabled="false"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="12dp"
                  android:layout_marginVertical="12dp"/>

            </LinearLayout>

</androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/strength_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/aero_matics_display_bold_italic"
                        android:gravity="center"
                        android:text="@string/strength"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="italic" />

                    <ImageButton
                        android:id="@+id/strength_add_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_group_18" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/strength_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="12dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

</ScrollView>
</FrameLayout>