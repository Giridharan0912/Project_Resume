<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    tools:context=".activities.editresume.editresumefragments.AIVFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="50dp"
    >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       <androidx.cardview.widget.CardView
           android:id="@+id/achievement_cv"
           app:cardBackgroundColor="@android:color/transparent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/achievement_tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="12dp"
               android:layout_marginTop="12dp"
               android:fontFamily="@font/aero_matics_display_bold_italic"
               android:gravity="center"
               android:text="@string/achievement"
               android:textColor="@android:color/black"
               android:textSize="32sp"
               android:textStyle="italic" />

           <ImageButton
               android:id="@+id/achievement_add_iv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="8dp"
               android:background="@android:color/transparent"
               android:src="@drawable/ic_group_18" />
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/achievement_rv"
               android:nestedScrollingEnabled="false"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="12dp"
               android:layout_marginVertical="12dp"/>

       </LinearLayout>
       </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/IV_cv"
               android:layout_below="@+id/achievement_cv"
               app:cardBackgroundColor="@android:color/transparent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/IV_tv"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="12dp"
                       android:layout_marginTop="12dp"
                       android:fontFamily="@font/aero_matics_display_bold_italic"
                       android:gravity="center"
                       android:text="@string/iv"
                       android:textColor="@android:color/black"
                       android:textSize="32sp"
                       android:textStyle="italic" />

                   <ImageButton
                       android:id="@+id/IV_add_iv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="8dp"
                       android:background="@android:color/transparent"
                       android:src="@drawable/ic_group_18" />
                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/IV_rv"
                       android:nestedScrollingEnabled="false"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="12dp"
                       android:layout_marginVertical="12dp"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </RelativeLayout>
   </ScrollView>
</FrameLayout>